{
  "$schema": "https://json.schemastore.org/tsconfig",
  "ts-node": {
    "swc": false,
    "transpileOnly": true
  },
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "moduleResolution": "node",
    "importHelpers": true,
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitAny": false,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "outDir": "dist",
    "pretty": true,
    "esModuleInterop": true,
    "removeComments": false,
    "sourceMap": true,
    "declaration": true,
    "declarationMap": false,
    "skipLibCheck": true,
    "lib": ["esnext"],
    "paths": {},
    "plugins": []
  },
  "include": ["src"]
}
